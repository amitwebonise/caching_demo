<%= simple_form_for(@post, :defaults => { :input_html => { :class => 'form-horizontal' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desciption, :rows => "3" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
